{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    {
      "src": "/api/pusher/auth",
      "methods": ["POST"],
      "dest": "/api/pusher/auth.cts"
    },
    {
      "src": "/api/pusher/auth",
      "methods": ["GET", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"],
      "status": 405
    }
  ]
} 